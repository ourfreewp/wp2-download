{
	"name": "wp2/application-suite",
	"description": "The complete WP2 application suite.",
	"type": "project",
	"require": {
		"php": ">=8.0",
		"aws/aws-sdk-php": "^3.200",
		"symfony/string": "^7.3",
		"myclabs/deep-copy": "^1.13"
	},
	"autoload": {
		"psr-4": {
			"WP2\\Download\\": "wp-content/mu-plugins/wp2-download/src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests/"
		}
	},
	"config": {
		"vendor-dir": "wp-content/wp2/vendor",
		"allow-plugins": {
			"composer/installers": true,
			"pestphp/pest-plugin": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"require-dev": {
		"pestphp/pest": "^3.8",
		"squizlabs/php_codesniffer": "^3.7",
		"wp-coding-standards/wpcs": "2.3.0",
		"humanmade/coding-standards": "^1.2",
		"phpcsstandards/phpcsextra": "^1.4",
		"phpcsstandards/phpcsutils": "^1.1",
		"phpcompatibility/php-compatibility": "^9.3",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"fig-r/psr2r-sniffer": "^0.5.0",
		"friendsofphp/php-cs-fixer": "^3.86"
	}
}
