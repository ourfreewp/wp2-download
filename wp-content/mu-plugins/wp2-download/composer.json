{
	"name": "wp2/download",
	"description": "Handles plugin downloads using Cloudflare R2.",
	"type": "wordpress-muplugin",
	"require": {
		"php": ">=8.0",
		"aws/aws-sdk-php": "^3.200"
	},
	"autoload": {
		"psr-4": {
			"WP2\\Download\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests/"
		}
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"pestphp/pest-plugin": true
		}
	},
	"require-dev": {
		"pestphp/pest": "^3.8"
	}
}